ion-view
  ion-header-bar(align-title="center", class="bar-stable")
    .buttons
      button.button.button-stable.icon.ion-home(ui-sref="homepage")
    h1.title Détail d'une visite
    .button
      ion-spinner(ng-show="loading")
  ion-content
    .list
      visit-card(visit="visit")
      .card(ng-if="visit.tracker")
        .item.item-divider.item-icon-left
          i.icon.ion-chatboxes
          | Activités
        .item.item-icon-right.item-input-inset.add-comment-input
          textarea(msd-elastic="\n", placeholder="{{ commentPlaceholder }}", ng-model="comment")
          button.button-clear.button.button-dark.icon.ion-android-send
        .item.item-avatar.item-text-wrap
          img(ng-src="{{ visit.tracker.pictureUrl }}")
